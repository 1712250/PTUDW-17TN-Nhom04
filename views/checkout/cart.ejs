<link rel="stylesheet" href="/css/checkout/cart.css">
<script src="/js/checkout/cart.js"></script>

<% let total = 0; %>
<div class="row">
    <div class="col-8">
        <% if (cart.length == 0) { %>
        <div class="h-100 d-flex align-items-center justify-content-center pb-5">
            There's nothing here. Go<a class="ml-1" href="/browse">buy some</a>?
        </div>
        <% } else { %>
        <div class="item-list">
            <% cart.forEach((bookInstance) => { %>
            <% const price = Math.ceil(bookInstance.price * bookInstance.discount / 10) / 10 %>
            <% total += price %>
            <div class="d-flex item" id="<%= bookInstance._id %>">
                <img class="item-preview" src="/images/<%= bookInstance.book.image_url %>">
                <div class="w-100 d-flex">
                    <div class="w-100 p-3">
                        <div class="d-flex justify-content-between">
                            <a href="/browse/book?id=<%= bookInstance.book._id %>"
                                class="item-name"><%= bookInstance.book.title %></a>
                            <div class="item-price">$<%= price %>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="item-seller">
                                Written by <a href="/browse/author?id=<%= bookInstance.book.author._id %>">
                                    <%= bookInstance.book.author.name %>
                                </a>
                            </div>
                            <div class="d-flex item-discount">
                                <div class="item-original-price">$<%= bookInstance.price %></div>
                                |
                                <div class="item-discount-amount">-<%= bookInstance.discount %>%</div>
                            </div>
                        </div>
                        <ul class="pagination mt-2">
                            <li class="page-item">
                                <button class="page-link item-count-control p-0"
                                    onclick="decreaseNumber('<%= bookInstance._id %>')">-</button>
                            </li>
                            <li class=" page-item">
                                <input type="text" class="page-link item-count" value="1">
                            </li>
                            <li class="page-item">
                                <button class="page-link item-count-control p-0"
                                    onclick="increaseNumber('<%= bookInstance._id %>')">+</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        <% } %>
    </div>

    <% const vat = Math.ceil(total / 10) / 10; %>
    <% const coupon = 10; %>
    <% const actual = Math.ceil((total + vat - coupon) * 10) / 10; %>
    <div class="col-4">
        <div class="bill w-100">
            <div class="d-flex justify-content-between">
                <p>Total</p>
                <p>$<%= total %> USD</p>
            </div>
            <div class="d-flex justify-content-between">
                <p>VAT</p>
                <p>$<%= vat %> USD</p>
            </div>
            <div class="d-flex justify-content-between">
                <p class="m-0">Coupon</p>
                <p class="m-0">- $<%= coupon %> USD</p>
            </div>
            <div class="dropdown-divider"></div>
            <div class="d-flex justify-content-between">
                <p class="m-0">Actual</p>
                <p style="color: red; font-size: 1.5rem; margin: 0;">$<%= actual %> USD</p>
            </div>
        </div>
        <div class="coupon mt-3">
            <p class="m-0">Coupon</p>
            <div class="dropdown-divider"></div>
            <div class="input-group mt-3">
                <input type="number" class="form-control" placeholder="Type coupon here">
                <div class="input-group-append">
                    <button class="btn background-secondary button-hover" type="button">Apply</button>
                </div>
            </div>
        </div>
        <a href="/checkout/shipping" class="mt-3 w-100 btn button-order" type="button">Order</a>
    </div>
</div>