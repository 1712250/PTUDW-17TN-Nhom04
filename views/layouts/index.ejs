    <!-- Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document" style="max-width: 50vw">
            <div class="modal-content">
                <div class="modal-body mx-3">
                    <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="login-tab" data-toggle="tab" href="#login-form" role="tab"
                                aria-controls="login-form" aria-selected="true">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="sign-up-tab" data-toggle="tab" href="#sign-up-form" role="tab"
                                aria-controls="sign-up-form" aria-selected="false">Sign up</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="login-form" role="tabpanel"
                            aria-labelledby="login-tab">
                            <form>
                                <div class="form-group row justify-content-center">
                                    <label class="font-size-small col-2 text-align-left align-self-center p-0 m-0"
                                        for="exampleInputEmail1">Email
                                        address</label>
                                    <input type="email" class="form-control font-size-small col-9"
                                        id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                                </div>
                                <div class="form-group row justify-content-center">
                                    <label class="font-size-small col-2 text-align-left align-self-center p-0 m-0"
                                        for="exampleInputPassword1">Password</label>
                                    <input type="password" class="form-control font-size-small col-9"
                                        id="exampleInputPassword1" placeholder="Password">
                                </div>
                                <div class="font-size-small mb-3 d-flex justify-content-center">
                                    <div>Forget password? <a href="#">Click here</a></div>
                                </div>
                                <button type="submit" class="btn my-1 background-secondary button-hover w-100"
                                    onclick="doLogin()">Login</button>
                                <button type="submit" class="btn my-1 button-facebook button-hover w-100 text-white"><i
                                        class="fab fa-facebook-f"></i> Login with Facebook</button>
                                <button type="submit" class="btn my-1 button-google button-hover w-100 text-white"><i
                                        class="fab fa-google"></i> Login with Google</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="sign-up-form" role="tabpanel" aria-labelledby="sign-up-tab">
                            <form class="font-size-small">
                                <div class="form-group row ml-1">
                                    <label for="fullName"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0">Full
                                        Name </label>
                                    <div class="col-9">
                                        <input type="text" class="form-control font-size-small font-size-small"
                                            id="fullName" placeholder="Le Hoang Vu">
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label for="phoneNumber"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0">Phone
                                        Number</label>
                                    <div class="input-group col-9">
                                        <input type="text" class="form-control font-size-small my-auto" id="phoneNumber"
                                            placeholder="Type your phone number">
                                        <div class="input-group-append">
                                            <button type="submit"
                                                class="btn my-1 background-secondary button-hover font-size-small">Send
                                                activation code</button>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label for="activeCode"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0">Activation
                                        Code</label>
                                    <div class="col-9">
                                        <input type="text" class="form-control font-size-small" id="activeCode"
                                            placeholder="Type your activation code sent to the phone number above">
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label for="email"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0">Email</label>
                                    <div class="col-9">
                                        <input type="email" class="form-control font-size-small" id="email"
                                            placeholder="lhvubtqn@gmail.com">
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label
                                        class="col-3 col-form-label mt-2 justify-content-left px-0 mx-0">Gender</label>
                                    <div class="col-9">
                                        <div class="form-check form-check-inline mt-3 justify-between-center">
                                            <input class="form-check-input" name="gender" type="radio" id="Male"
                                                value="Male">
                                            <label class="form-check-label" for="Male">Male</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" name="gender" type="radio" id="Female"
                                                value="Female">
                                            <label class="form-check-label" for="Female">Female</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" name="gender" type="radio" id="Another"
                                                value="Another">
                                            <label class="form-check-label" for="Another">Another</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label class="col-3 col-form-label mt-2 justify-content-left px-0 mx-0">Day of
                                        Birth</label>
                                    <div class="form-group col-3">
                                        <select class="form-control font-size-small">
                                            <option selected>Day</option>
                                            <option>...</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-3">
                                        <select class="form-control font-size-small">
                                            <option selected>Month</option>
                                            <option>...</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-3">
                                        <select class="form-control font-size-small">
                                            <option selected>Year</option>
                                            <option>...</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label for="password"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0">Password</label>
                                    <div class="col-9">
                                        <input type="password" class="form-control font-size-small" id="password"
                                            placeholder="Password length from 6 to 32 characters">
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label for="retype"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0">Retype</label>
                                    <div class="col-9">
                                        <input type="password" class="form-control font-size-small" id="retype"
                                            placeholder="Retype your new password">
                                    </div>
                                </div>

                                <button type="submit" class="btn my-1 background-secondary button-hover w-100">Sign
                                    up</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
