                    </svg>
                    <div
                        class="cart-badge badge badge-pill badge-danger <%= (user == null || user.cart.length == 0) ? 'd-none' : '' %>">
                        <%= (user != null) ? user.cart.length : 0 %>
                    </div>
                </a>
                <%- include("cart_preview"); %>
            </li>
            <li class="nav-item dropdown">
                <% if (user != null) { %>
                <%-     include("account"); %>
                <% } else { %>
                <%-     include("login"); %>
                <% } %>
            </li>
        </ul>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/browse?sortBy=new">New</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/browse?sortBy=best-sell">Best Sell</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/browse?category=fiction">Fiction</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/browse?category=nonfiction">Nonfiction</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/browse">Browse</a>
                </li>
            </ul>
            <form class="input-group mr-sm-2">
                <input type="text" class="form-control" placeholder="Search">
                <div class="input-group-append">
                    <button class="btn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </nav>
    <!-- !Navigation -->

    <!-- Body -->
    <div class="body container-fluid px-3 px-lg-5 py-4">
        <%- body %>
    </div>
    <!-- !Body -->

    <!-- Modals -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 40vw">
            <div class="modal-content">
                <div class="modal-body mx-3">
                    <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="login-tab" data-toggle="tab" href="#login-form" role="tab"
                                aria-controls="login-form" aria-selected="true">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="sign-up-tab" data-toggle="tab" href="#sign-up-form" role="tab"
                                aria-controls="sign-up-form" aria-selected="false">Sign up</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="login-form" role="tabpanel"
                            aria-labelledby="login-tab">
                            <form>
                                <div class="form-group row ml-1">
                                    <label for="login-email"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0 font-size-small">Email
                                        Address</label>
                                    <div class="col-9 pl-0">
                                        <input type="email" class="form-control font-size-small" id="login-email"
                                            placeholder="example@email.com" required>
                                    </div>
                                </div>
                                <div class="form-group row ml-1">
                                    <label for="login-password"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0 font-size-small">Password</label>
                                    <div class="col-9 pl-0">
                                        <input type="password" class="form-control font-size-small" id="login-password"
                                            minlength="6" placeholder="Password length from 6 to 32 characters"
                                            required>
                                    </div>
                                </div>
                                <div class="font-size-small mb-3 d-flex justify-content-center">
                                    <div>Forget password? <a id="hrefForgetPass" href="#">Click here</a></div>
                                </div>
                                <button type="submit"
                                    class="btn my-1 background-secondary button-hover w-100 font-size-small">Login</button>
                            </form>
                            <button class="btn my-1 button-facebook button-hover w-100 text-white font-size-small"><i
                                    class="fab fa-facebook-f"></i> Login with Facebook</button>
                            <button class="btn my-1 button-google button-hover w-100 text-white font-size-small"><i
                                    class="fab fa-google"></i> Login with Google</button>
                        </div>
                        <div class="tab-pane fade" id="sign-up-form" role="tabpanel" aria-labelledby="sign-up-tab">
                            <form class="font-size-small">
                                <div class="form-group row ml-1">
                                    <label for="fullName"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0 font-size-small">Full
                                        Name </label>
                                    <div class="col-9 pl-0">
                                        <input type="text" class="form-control font-size-small font-size-small"
                                            id="fullName" placeholder="Le Hoang Vu" required>
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label for="phoneNumber"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0 font-size-small">Phone
                                        Number</label>
                                    <div class="col-9 pl-0">
                                        <input type="tel" class="form-control font-size-small my-auto" id="phoneNumber"
                                            pattern='^0\d+' placeholder="Type your phone number" required>
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label for="email"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0 font-size-small">Email
                                        Address</label>
                                    <div class="col-9 pl-0">
                                        <input type="email" class="form-control font-size-small" id="email"
                                            placeholder="lhvubtqn@gmail.com" required>
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label
                                        class="col-3 col-form-label justify-content-left px-0 mx-0 font-size-small">Gender</label>
                                    <div id="gender" class="col-9 d-flex justify-content-around align-items-center">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" name="gender" type="radio" id="Male"
                                                value="Male" required>
                                            <label class="form-check-label font-size-small" for="Male">Male</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" name="gender" type="radio" id="Female"
                                                value="Female">
                                            <label class="form-check-label font-size-small" for="Female">Female</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" name="gender" type="radio" id="Another"
                                                value="Another">
                                            <label class="form-check-label font-size-small"
                                                for="Another">Another</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row ml-1 mt-2">
                                    <label
                                        class="col-3 col-form-label justify-content-left px-0 mx-0 font-size-small">Day
                                        of
                                        Birth</label>
                                    <div class="col-9 pl-0">
                                        <div class="input-group date" data-provide="datepicker">
                                            <input id="date-of-birth" type="text" class="form-control font-size-small"
                                                placeholder="mm/dd/yyyy" required>
                                            <div class="input-group-append">
                                                <div
                                                    class="btn btn-secondary input-group-addon d-flex align-items-center">
                                                    <i class="fas fa-calendar-alt"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label for="password"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0 font-size-small">Password</label>
                                    <div class="col-9 pl-0">
                                        <input type="password" class="form-control font-size-small" id="password"
                                            minlength="6" placeholder="Password length from 6 to 32 characters"
                                            required>
                                    </div>
                                </div>

                                <div class="form-group row ml-1">
                                    <label for="retype"
                                        class="col-3 col-form-labe mt-2 justify-content-left px-0 mx-0 font-size-small">Retype</label>
                                    <div class="col-9 pl-0">
                                        <input type="password" class="form-control font-size-small" id="retype"
                                            placeholder="Retype your new password" required>
                                    </div>
                                </div>

                                <button type="submit"
                                    class="btn my-1 background-secondary button-hover w-100 font-size-small">Sign
                                    up</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="forgetPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgetPasswordModal"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <form class="modal-content">
                <div class="modal-header">
                    <div class="modal-title" style="font-size: 1rem;"><b>RESET PASSWORD</b></div>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="email" class="form-control font-size-small" placeholder="Type your email address"
                        required>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary font-size-small" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn background-secondary button-hover font-size-small">Reset
                        password</button>
                </div>
            </form>
        </div>
    </div>

    <div class="modal fade" id="question-modal" tabindex="-1" role="dialog" aria-labelledby="question-modal"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Yes</button>
                </div>
            </div>
        </div>
    </div>
    <!-- !Modals -->

    <!-- Snackbar -->
    <div id="snackbar" class="w-100 d-flex justify-content-center align-items-center">
        <div class="text-center">
            Some text some message..
        </div>
    </div>
    <!-- !Snackbar -->

    <!-- Carousel -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/review.svg" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="/images/review.svg" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="/images/review.svg" class="d-block w-100">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span aria-hidden="true"><img src="/images/control-prev.svg" alt="Previous"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span aria-hidden="true"><img src="/images/control-next.svg" alt="Next"></span>
        </a>
    </div>
    <!-- !Carousel -->

    <!-- Footer -->
    <div class="footer container-fluid">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-4 order-lg-1">
                <div class="row justify-content-center">
                    <div class="company">
                        <img class="footer-logo" src="/images/logo-block.svg" alt="Logo">
                        <div class="contact">
                            <div>
                                2299 Kenmore Ave<br>Buffalo, NY 14207</p>
                            </div>
                            <div style="margin-left: 1rem;">
                                Email: help@obooks.com <br>
                                Phone: 1-888-402-7323
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-4 order-3 order-lg-2">
                <div class="row mt-2">
                    <div class="col offset-auto col-lg-6 offset-lg-0 justify">
                        <div class="row justify-content-center">
                            <ul class="nav-footer-links">
                                HELP
                                <li><a href="#" class="nav-footer-link">About Us</a></li>
                                <li><a href="#" class="nav-footer-link">Customer Service</a></li>
                                <li><a href="#" class="nav-footer-link">Ordering</a></li>
                                <li><a href="#" class="nav-footer-link">Shipping</a></li>
                                <li><a href="#" class="nav-footer-link">Contact Us</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col col-lg-6 offset-lg-0">
                        <div class="row justify-content-center">
                            <ul class="nav-footer-links">
                                ACCOUNT
                                <% if (user != null) { %>
                                <li><a href="javascript:doLogout()" class="nav-footer-link">Logout</a></li>
                                <li><a href="/account/orders" class="nav-footer-link">Past Orders</a></li>
                                <li><a href="/account" class="nav-footer-link">Edit Profile</a></li>
                                <% }  else { %>
                                <li><a href="javascript:$('#loginModal').modal({show:true}); $('#login-tab').tab('show');"
                                        class="nav-footer-link">Login</a></li>
                                <li><a href="javascript:$('#loginModal').modal({show:true}); $('#sign-up-tab').tab('show');"
                                        class="nav-footer-link">Sign up</a></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 order-lg-3">
                <div class="subscribe">
                    <div class="socials">
                        <img src="/images/instagram.svg" alt="Instagram">
                        <img src="/images/tweet.svg" alt="Tweet">
                        <img src="/images/facebook.svg" alt="Facebook">
                    </div>
                    <p>STAY CONNECTED!</p>
                    <p>Subscribe to our newsletter for promotions & more.</p>
                    <div>
                        <a href="#">SUBSCRIBE NOW</a>
                        <img src="/images/right-arrow.svg" alt="Right Arrow">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- !Footer -->

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>
    <script src="/js/bootstrap-datepicker.min.js"></script>
    <script src="/js/header_footer.js"></script>
    <script src="/js/auth.js"></script>
    <%- script %>
</body>

</html>