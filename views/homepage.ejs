            <div class="col-1">
                <img class="rounded-circle icon-book" src="/images/IndieBound_Logo.png" />
            </div>

            <div class="title-book col-9 mt-3">
                <h1 class="title-book">Best Sellers: Hardcover Fiction</h1>
            </div>
            <div onclick="location.href='/browse?sortBy=best-sell&category=Fiction %>'"
