                    <a class="font-weight-bold font-gtsuper" href="/browse/book?id=<%= bookInstance.book._id %>"
                        style="color: black;"><%= bookInstance.book.title %></a>
                    <div><%= bookInstance.book.author[0].name %></div>
                    <div class="row">
                        <div class="text-danger underline ml-3"><del>$<%= bookInstance.price %></del></div>
                        <div class="ml-3 font-weight-bold">$<%= actualPrice %></div>
                    </div>
                </div>
