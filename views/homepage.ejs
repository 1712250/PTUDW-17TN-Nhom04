<div class="container-fluid carouselThumb" id="header">
    <!--Carousel Thumbail-->
    <div id="carouselThumb" class="carousel slide mt-10" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 img-thumb" src="/images/Thumb1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 img-thumb" src="/images/Thumb2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
