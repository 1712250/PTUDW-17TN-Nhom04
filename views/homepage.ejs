<!-- Button To Top -->
<a id="back-to-top">
    <i class="fas fa-chevron-up align-items-center"></i>
</a>
<!--! Button To Top-->

<script type="text/javascript">
    var btn = $('#back-to-top');

    $(window).scroll(function () {
        if ($(window).scrollTop() > 300) {
            btn.addClass('show');
        } else {
            btn.removeClass('show');
        }
    });

    btn.on('click', function (e) {
        e.preventDefault();
        $('html, body').animate({ scrollTop: 0 }, '300');
    });
</script>