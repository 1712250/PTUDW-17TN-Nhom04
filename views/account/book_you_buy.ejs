<link rel="stylesheet" href="/css/account/book_you_buy.css">

<div class="row mt-3 justify-content-center">
    <%- include("nav_sidebar"); %>

    <!--Account Info -->
    <div class="content border col-8 shadow rounded-lg" id="content-data">
        <div class="row" style="height: auto;">
            <div class="ml-3 mt-5 mb-5 font-weight-bold col-9">BOOK YOU BUY</div>
            <nav aria-label="Page navigation example" class="col-2" style="align-self: center;">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="list-books row mt-2 text-wrap px-3">
            <% if (orders.length == 0) { %>
            <div class="h-100 d-flex align-items-center justify-content-center pb-5">
                There's nothing here. Go<a class="ml-1" href="/browse">buy some</a>?
            </div>
            <% } else { %>
            <% const set = new Set(); %>
            <% orders.forEach(order => { %>
            <% order.books.forEach(item => { %>
            <% if (!set.has(item.book._id)) { %>
            <% set.add(item.book._id); %>
            <a class="d-block col-12 col-sm-6 col-lg-4" href="/browse/book?id=<%= item.book._id %>">
                <div class="card my-2 pt-3 d-flex flex-column align-items-center">
                    <img src="/images/<%= item.book.book.image_url %>" class="card-img-top">
                    <div class="card-body">
                        <p class="book-name text-truncate"><%= item.book.book.title %></p>
                        <button class="btn w-100">Review</button>
                    </div>
                </div>
            </a>
            <% } %>
            <% }); %>
            <% }); %>
            <% } %>
        </div>
    </div>
</div>
<div class="col-12 mt-5 justify-content-center text-center">
    <a class="justify-content-center text-center" href="#"> NOT WHAT YOU LOOKING FOR? BROWSE MORE>></a>
</div>