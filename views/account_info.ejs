                <div class="col-sm-9">
                    <input type="text" class="form-control" id="activeCode"
                        placeholder="Type yout activation code sent to the phone number above">
                </div>
            </div>

            <div class="form-group row ml-1">
                <label for="email" class="col-sm-2 col-form-labe mt-2 justify-content-left">Email</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control" id="email" placeholder="lhvubtqn@gmail.com">
                </div>
            </div>

            <div class="form-group row ml-1">
                <label class="col-sm-2 col-form-label mt-2 justify-content-left">Gender</label>
                <div class="col-sm-9">
                    <div class="form-check form-check-inline mt-3 justify-between-center">
                        <input class="form-check-input" name="gender" type="radio" id="Male" value="Male">
                        <label class="form-check-label" for="Male">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="gender" type="radio" id="Female" value="Female">
                        <label class="form-check-label" for="Female">Female</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="gender" type="radio" id="Another" value="Another">
                        <label class="form-check-label" for="Another">Another</label>
                    </div>
                </div>
            </div>

            <div class="form-group row ml-1">
                <label class="col-sm-2 col-form-label mt-2 justify-content-left">Day of Birth</label>
                <div class="form-group col-sm-2">
                    <select id="inputState" class="form-control">
                        <option selected>Day</option>
                        <option>...</option>
                    </select>
                </div>
                <div class="form-group col-sm-2">
                    <select id="inputState" class="form-control">
                        <option selected>Month</option>
                        <option>...</option>
                    </select>
                </div>
                <div class="form-group col-sm-2">
                    <select id="inputState" class="form-control">
                        <option selected>Year</option>
                        <option>...</option>
                    </select>
                </div>
            </div>

            <div class="form-group row ml-1">
                <label for="oldPass" class="col-sm-2 col-form-labe mt-2 justify-content-left">Old Password</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="oldPass" placeholder="Your old password">
                </div>
            </div>

            <div class="form-group row ml-1">
                <label for="newPass" class="col-sm-2 col-form-labe mt-2 justify-content-left">New Password</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="newPass"
                        placeholder="Password length from 6 to 32 characters">
                </div>
            </div>

            <div class="form-group row ml-1">
                <label for="retype" class="col-sm-2 col-form-labe mt-2 justify-content-left">Retype</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="retype" placeholder="Retype your new password">
                </div>
            </div>

            <div class="form-group row ml-1">
                <label class="col-sm-2 col-form-labe mt-2 justify-content-left"> </label>
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-warning">Update Information</button>
                </div>
